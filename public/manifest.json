{
  "manifest_version": 2,

  "name": "Conceal Browser Extension",
  "short_name": "Conceal",
  "description": "Conceal Cloud Browser Extension",
  "version": "0.1",

  "icons": {
    "48": "icons/ccx.svg",
    "96": "icons/ccx.svg"
  },

  "browser_action": {
    "default_icon": "icons/ccx.svg",
    "default_popup": "index.html",
    "default_title": "Conceal"
  },

  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "notifications",
    "unlimitedStorage",
    "webNavigation",
    "activeTab",
    "declarativeContent",
    "contextMenus",
    "*://*/*"
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'"
}
